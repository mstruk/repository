<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eventjuggler.services</groupId>
        <artifactId>eventjuggler-services-parent</artifactId>
        <version>0.1.0.20130301</version>
    </parent>

    <artifactId>eventjuggler-services-build</artifactId>

    <name>EventJuggler Services Build</name>
    <packaging>pom</packaging>

    <properties>
        <jboss.target.dir>target/jboss-as-${version.org.jboss.as}</jboss.target.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.eventjuggler.services</groupId>
            <artifactId>analytics-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eventjuggler.services</groupId>
            <artifactId>analytics-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>net.sf.uadetector</groupId>
            <artifactId>uadetector-resources</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <ant antfile="build.xml" inheritRefs="false">
                                    <target name="all" />
                                </ant>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss</groupId>
                        <artifactId>jandex</artifactId>
                        <version>${version.org.jboss.jandex}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-apache-bsf</artifactId>
                        <version>${version.org.apache.ant}</version>
                    </dependency>
                    <dependency>
                        <groupId>rhino</groupId>
                        <artifactId>js</artifactId>
                        <version>${version.rhino.js}</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>generate-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <configuration>
                            <transformationSets>
                                <transformationSet>
                                    <dir>src/main/resources/jboss-as-${version.org.jboss.as}/standalone/configuration</dir>
                                    <stylesheet>src/main/resources/xslt/standalone.xsl</stylesheet>
                                    <includes>
                                        <include>standalone*.xml</include>
                                    </includes>
                                    <outputDir>${jboss.target.dir}/standalone/configuration</outputDir>
                                </transformationSet>
                            </transformationSets>
                            <targetDirectory>${project.build.directory}</targetDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
